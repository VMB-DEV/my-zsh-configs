" Show line number absolute and relatives
set rnu
" Show syntax
syntax on
" Show file stats
set ruler

" Blink cursor on error instead of beeping (grr)
" set visualbell
" Disable the bell
"set belloff

set shiftwidth=2
set softtabstop=2
set expandtab
set noshiftround
set showmode
set history=1000

" color desert
" color lunaperche
" color wildcharm
" color slate
color habamax
